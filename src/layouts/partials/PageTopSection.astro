---
import ImageMod from "@/components/ImageMod.astro";
import { markdownify } from "@/lib/utils/textConverter";

const {
  data: { title, subtitle, description, image, logo },
} = Astro.props;
---

<section class="mx-4 relative">
  <div class="container">
    <div class="row justify-center">
      <div class="lg:col-10 pb-14 pt-20 md:pt-32 text-center">
        <div
          class="inline-flex items-center gap-2 bg-secondary py-2 px-6 rounded-3xl mb-5 aos-init aos-animate"
          data-aos="fade-up"
        >
          <img src="/images/hero-icon.png" alt="icon" class="h-7" />
          <p class="text-dark" set:html={markdownify(title)} />
        </div>
        <h1
          class="pb-4 capitalize text-5xl md:text-6xl leading-[55px] md:leading-[76px]"
          data-aos="fade-up"
          set:html={markdownify(subtitle)}
        />
        <p
          class="text-balance"
          data-aos="fade-up"
          data-aos-delay="50"
          set:html={markdownify(description as string)}
        />
      </div>
    </div>
    <ImageMod
      src={image}
      alt={title}
      data-aos="fade-up"
      data-aos-delay="100"
      class="rounded-xl mx-auto"
      width={1200}
      height={600}
    />

    {
      logo && logo?.enable && (
        <div
          class="grid grid-cols-3 md:grid-cols-5 gap-10 justify-center pt-10 relative z-10"
          data-aos="fade-up"
        >
          {logo?.images?.map((logo: string) => (
            <img class="mx-auto" src={logo} alt={`logo-${logo}`} />
          ))}
        </div>
      )
    }
  </div>
  <div
    class="bg-shape-top-right w-full h-[calc(70%+3.5rem)] sm:h-[calc(60%+6rem)] !absolute top-0 left-1/2 transform -translate-x-1/2 !-z-10"
  >
  </div>
</section>
